<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/default_margin"
    app:cardElevation="@dimen/cardview_default_elevation"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:text="@string/profile"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16"
            android:padding="@dimen/default_margin"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shopGroDescriptionTextView"
            android:text="@string/shopgro"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_16"
            android:padding="@dimen/default_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shopConsumerTextView"
            android:text="@string/shopgro_consumer"
            android:autoLink="web"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_14"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shopRetailerTextView"
            android:text="@string/shopgro_retailer"
            android:autoLink="web"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_14"
            android:paddingTop="@dimen/default_margin"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/practiceDescriptionTextView"
            android:text="@string/practiceCode"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_16"
            android:padding="@dimen/default_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/practice_code"
            android:autoLink="web"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_14"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelTextView"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/default_margin"
                android:text="@string/btn_cancel"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
